# Environment variables for Koguma-LM

# Weights & Biases (optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=koguma-lm

# Hugging Face Hub (for model downloads)
HF_TOKEN=your_huggingface_token_here

# Hardware settings
PYTORCH_MPS_HIGH_WATERMARK_RATIO=0.7  # For M3 Ultra
CUDA_VISIBLE_DEVICES=0  # For RTX A5500

# Model cache
HF_HOME=./models
TRANSFORMERS_CACHE=./models

# Logging
LOG_LEVEL=INFO